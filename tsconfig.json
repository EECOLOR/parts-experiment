{
  "exclude": ["node_modules"],
  "compilerOptions": {
     "esModuleInterop": true,
     "strictNullChecks": true,
     "resolveJsonModule": true,
     "noEmit": true,
     "allowJs": true,
     "checkJs": true,
     "jsx": "react",
     "lib": ["esnext", "dom"],
     "baseUrl": ".",
     "paths": {
       "part:*?": [".partTypes/optionalParts/*"],
       "part:*": [".partTypes/parts/*"],
       "optional:*": [".partTypes/optionalParts/*"],
       "all:part:*": [".partTypes/allParts/*"],
       "all:*": [".partTypes/allParts/*"],
       "config:sanity": ["sanity.json"],
       "config:*": ["config/*.json"]
     }
  }
}